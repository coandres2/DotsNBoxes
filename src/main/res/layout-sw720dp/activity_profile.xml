<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activities.ProfileActivity">

    <include layout="@layout/common_toolbar_layout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/_16sdp"
        app:cardBackgroundColor="@color/icon_color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_profile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/me_icon" />

                    <ImageView
                        android:id="@+id/btn_add_image"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_54sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/icon_circular_white"
                        android:src="@drawable/ic_add_profile" />
                </FrameLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:src="@drawable/profile_line" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/muli_light"
                android:includeFontPadding="false"
                android:text="@string/set_your_name"
                android:textColor="@color/font_color_title_small"
                android:textSize="@dimen/_11ssp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_set_your_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_13sdp"
                    android:layout_marginStart="@dimen/_13sdp"
                    android:backgroundTint="@color/colorAccent"
                    android:paddingBottom="@dimen/_12sdp"
                    android:textCursorDrawable="@drawable/edittext_cursor"
                    android:fontFamily="@font/muli_semi_bold"
                    android:imeOptions="actionDone"
                    android:maxLength="8"
                    android:includeFontPadding="false"
                    android:textColor="@color/font_color_title"
                    android:textSize="@dimen/_12ssp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@color/colorAccent"
                    android:text="@string/save"
                    android:visibility="gone"
                    android:fontFamily="@font/muli_regular"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="end"
                    android:textSize="@dimen/_11ssp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:clipToPadding="false"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/icon_color_white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_grey_border"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli_regular"
                                android:includeFontPadding="false"
                                android:text="@string/game_played"
                                android:textColor="@color/font_color_title"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tv_game_played"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="@font/muli_bold"
                                android:includeFontPadding="false"
                                android:text="100"
                                android:textColor="@color/colorButton"
                                android:textSize="@dimen/_23ssp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/icon_color_white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_grey_border"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli_regular"
                                android:includeFontPadding="false"
                                android:text="@string/win_new"
                                android:textColor="@color/font_color_title"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tv_game_win"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="@font/muli_bold"
                                android:includeFontPadding="false"
                                android:text="70"
                                android:textColor="@color/colorButton"
                                android:textSize="@dimen/_23ssp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/icon_color_white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_grey_border"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli_regular"
                                android:includeFontPadding="false"
                                android:text="@string/lost"
                                android:textColor="@color/font_color_title"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tv_game_lost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="@font/muli_bold"
                                android:includeFontPadding="false"
                                android:text="30"
                                android:textColor="@color/colorButton"
                                android:textSize="@dimen/_23ssp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/icon_color_white"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/light_grey_border"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/muli_regular"
                                android:includeFontPadding="false"
                                android:text="@string/win_percentage"
                                android:textColor="@color/font_color_title"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/tv_game_win_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:fontFamily="@font/muli_bold"
                                android:includeFontPadding="false"
                                android:text="70"
                                android:textColor="@color/colorButton"
                                android:textSize="@dimen/_23ssp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <include layout="@layout/common_ad_layout"/>


</LinearLayout>