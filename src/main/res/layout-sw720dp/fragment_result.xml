<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/icon_color_white"
    android:minWidth="720dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/_12sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_5sdp"
            android:gravity="center"
            android:paddingEnd="@dimen/_5sdp"
            android:layout_weight="0.5"
            android:background="@drawable/light_grey_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_won_player_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="@string/win"
                    android:textColor="@color/colorButton"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/img_won_player"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/winner_small_trofi_icon" />

                <TextView
                    android:id="@+id/tv_won_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="Won Player Name"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_won_player_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/colorButton"
                    android:textSize="@dimen/_22ssp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:background="@drawable/light_grey_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_lost_player_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="@string/lost"
                    android:textColor="@color/colorTitleBar"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/img_lost_player"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/lost_game_small_graphic" />

                <TextView
                    android:id="@+id/tv_lost_player_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli_semi_bold"
                    android:text="lost Player Name"
                    android:textColor="@color/colorBackground"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/tv_lost_player_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/colorButton"
                    android:textSize="@dimen/_22ssp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_12ssp">

        <LinearLayout
            android:id="@+id/ll_restart"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_background"
            android:paddingStart="@dimen/_12ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingBottom="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@drawable/restart_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Restart"
                android:textAllCaps="true"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_background"
            android:paddingStart="@dimen/_12ssp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingEnd="@dimen/_12ssp"
            android:paddingBottom="@dimen/_8sdp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_2sdp"
                android:src="@drawable/home_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/icon_color_white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>